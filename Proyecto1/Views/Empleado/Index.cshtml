@model IEnumerable<Proyecto1.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleados</h1>

<p>
    <a asp-action="Create">Agregar Empleado</a>
</p>

<div class="col-4">
    <form asp-controller="Empleado" asp-action="Index" method="get" class="form-inline mb-3">
        <div class="form-group mr-2">
            <label for="searchId">Buscar por Numero de empleado:</label>
            <input type="text" id="searchId" name="id" class="form-control form-control-sm">
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Numero de empleado
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellidos
            </th>
            <th>
                Fecha de ingreso
            </th>
            <th>
                Fecha de nacimiento
            </th>
            <th>
                Cédula
            </th>
            <th>
                Dirección
            </th>
            <th>
                Email
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Nombre de contacto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numeroEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.numeroEmpleado }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.numeroEmpleado }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.numeroEmpleado })
            </td>
        </tr>
}
    </tbody>
</table>
