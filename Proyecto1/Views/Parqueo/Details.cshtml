@model Proyecto1.Models.Parqueo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Parqueo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 my-3">
            ID
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.idParqueo)
        </dd>
        <dt class = "col-sm-2 my-3">
            Nombre
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2 my-3">
            Capacidad Máxima
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.cantidadMax)
        </dd>
        <dt class = "col-sm-2 my-3">
            Hora de Cierre
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.horaCierre)
        </dd>
        <dt class = "col-sm-2 my-3">
            Hora de Apertura
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.horaApertura)
        </dd>
        <dt class = "col-sm-2 my-3">
            Tarifa por Hora
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.tarifaHora)
        </dd>
        <dt class = "col-sm-2 my-3">
            Tarifa por Media Hora
        </dt>
        <dd class = "col-sm-10 my-3">
            @Html.DisplayFor(model => model.tarifaMediaHora)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idParqueo }) |
    <a asp-action="Index">Regresar</a>
</div>
