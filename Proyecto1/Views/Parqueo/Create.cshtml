@model Proyecto1.Models.Parqueo

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Parqueo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="idParqueo" class="control-label">ID</label>
                <input asp-for="idParqueo" class="form-control" />
                <span asp-validation-for="idParqueo" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="cantidadMax" class="control-label">Cupo máximo</label>
                <input asp-for="cantidadMax" class="form-control" />
                <span asp-validation-for="cantidadMax" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="horaCierre" class="control-label">Hora de cierre</label>
                <input asp-for="horaCierre" class="form-control" type="time" />
                <span asp-validation-for="horaCierre" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="horaApertura" class="control-label">Hora de apertura</label>
                <input asp-for="horaApertura" class="form-control" type="time" />
                <span asp-validation-for="horaApertura" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="tarifaHora" class="control-label">Tarifa por hora</label>
                <input asp-for="tarifaHora" class="form-control" />
                <span asp-validation-for="tarifaHora" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="tarifaMediaHora" class="control-label">Tarifa por media hora</label>
                <input asp-for="tarifaMediaHora" class="form-control" />
                <span asp-validation-for="tarifaMediaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
